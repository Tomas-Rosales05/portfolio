---
import HtmlIcon from "../icons/HtmlIcon.astro";
import CssIcon from "../icons/CssIcon.astro";
import JavasCriptsIcon from "../icons/JavasCriptsIcon.astro";
import ReactIcon from "../icons/ReactIcon.astro";
import TailwindIcon from "../icons/TailwindIcon.astro";
import Code from "../icons/Code.astro";
import PythonIcon from "../icons/PythonIcon.astro";
import Django from "../icons/Django.astro";

const TAGS = {
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-300 text-black",
    icon: JavasCriptsIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#38bdf8] text-white",
    icon: TailwindIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-600 text-white",
    icon: CssIcon,
  },
  REACT: {
    name: "React",
    class: "bg-white border border-zinc-300 text-black",
    icon: ReactIcon,
  },
  HTML: {
    name: "HTML5",
    class: "bg-orange-600 text-white",
    icon: HtmlIcon,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#3776AB] text-white", // azul principal
    icon: PythonIcon,
  }
  ,
  DJANGO: {
    name: "Django",
    class: "bg-[#092E20] text-white",
    icon: Django,
}
};

const PROJECTS = [
  {
    title: "Task App",
    descripcion:
      "Task App: A web application for managing tasks with user authentication, protected routes, and full CRUD functionality. Built with React, Django REST Framework, SQLite, and Vite, providing a modern and responsive interface for creating, viewing, editing, and deleting tasks.",
    github: "https://github.com/Tomas-Rosales05/Task-App",
    image: "../src/assets/tasks-app.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT,TAGS.PYTHON,TAGS.DJANGO,TAGS.REACT]
  },
  {
    title: "App del Clima",
    descripcion:
      "Weather App: A simple and intuitive web application to check the current weather and 5-day forecast for any city worldwide. Built with HTML5, CSS3, JavaScript, and the OpenWeatherMap API, featuring a clean, responsive design that displays temperature, humidity, wind speed, and weather conditions.",
    github: "https://github.com/Tomas-Rosales05/Weather-App",
    image: "../src/assets/weather-app.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
  {
    title: "Poke App",
    descripcion:
    "Pokémon App is a fun and interactive web application that allows users to explore all Pokémon using the PokéAPI. Users can browse Pokémon using \"Next\" and \"Previous\" buttons, and click on any Pokémon to view detailed information about its characteristics, including stats, abilities, and types. The app is built with React, HTML, and CSS, providing a responsive and user-friendly experience. ",
    github: "https://github.com/Tomas-Rosales05/Poke-App",
    image: "../src/assets/poke-app.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.REACT],
  },
];
---

<section class="max-w-5xl mx-auto px-4 py-16">
  <h2 class="text-4xl font-semibold mb-12 flex gap-x-3 items-center justify-center">
    <Code class="w-10 h-10 text-black" />
    Projects
  </h2>

  {PROJECTS.map(({ image, title, descripcion, tags, github }) => (
    <article class="mb-20">
      <a href={`${github}`} target="_blank">
        <img
        class="w-full max-w-3xl h-[400px] object-cover mx-auto mt-6 rounded-lg shadow-md transition-transform duration-300 ease-in-out hover:scale-105 hover:-translate-y-1"
        src={image}
        alt={`Captura de pantalla del proyecto ${title}`} 
      />
      </a>
      <h3 class="text-center mt-4 text-2xl font-bold">{title}</h3>
      <p class="text-center text-base md:text-lg mt-2 text-zinc-600">{descripcion}</p>

      <ul class="flex flex-wrap justify-center gap-3 mt-6">
        {tags.map((tag) => (
          <li>
            <span class={`inline-flex items-center gap-2 rounded-full text-sm px-4 py-2 ${tag.class}`}>
              <tag.icon class="w-5 h-5" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
    </article>
  ))}
</section>
